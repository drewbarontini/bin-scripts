#!/usr/bin/env bash
# *************************************
#
#   MVCSS
#   -> Download MVCSS files or copy to clipboard
#
# -------------------------------------
#   Dependencies
# -------------------------------------
#
#  - bash-comment
#  - download-zip
#  - font
#  - message
#
# -------------------------------------
#   Usage
# -------------------------------------
#
#  `mvcss` - downloads all the files
#  `mvcss components card` - downloads the Card Component
#  `mvcss copy components card` - copies the Card Component
#
# *************************************

# -------------------------------------
#   Errors
# -------------------------------------

set -o errexit
set -o nounset
set -o pipefail

# -------------------------------------
#   Variables
# -------------------------------------

EXT='sass'
URL='https://raw.githubusercontent.com/mvcss/mvcss/master'
ZIP='https://github.com/mvcss/mvcss/archive/master.zip'

# -------------------------------------
#   Error Handling
# -------------------------------------

function _on-exit() {
  [ "$?" != 0 ] && echo 'File not found!'
}

trap _on-exit EXIT

# -------------------------------------
#   Main
# -------------------------------------

if (( "$#" == 0 )); then

  message yellow 'Downloading...'
  download-zip "$ZIP"
  mv mvcss-master/foundation .
  mv mvcss-master/components .
  mv mvcss-master/structures .
  mv mvcss-master/application.sass .
  rm -rf mvcss-master
  message green "Downloaded MVCSS to $(pwd)"
  exit

fi

[[ "$*" =~ 'reset' ]] && EXT='scss'

if [ "$1" != 'copy' ]; then

  message yellow 'Downloading...'
  curl -fsO "$URL/$1/_$2.$EXT"
  message green "Downloaded $1/$2!"

else

  message yellow 'Copying...'
  curl -fs "$URL/$2/_$3.$EXT" | pbcopy
  message green "Copied $2/$3 to the clipboard!"

fi
