#!/usr/bin/env bash
# ****************************************************
#
#   MVCSS CSS Build
#   -> Pulls down and the MVCSS CSS build and copies to clipboard
#
# ----------------------------------------------------
#   Dependencies
# ----------------------------------------------------
#
#  - bash-comment
#
# ----------------------------------------------------
#   Usage
# ----------------------------------------------------
#
#  `mvcss-css-build` - copies an unminified application CSS file to clipboard
#  `mvcss-css-build min` - copies a minified application CSS file to clipboard
#
# ****************************************************

set -o errexit
set -o nounset
set -o pipefail

# ----------------------------------------------------
#   Variables
# ----------------------------------------------------

MVCSSURL='https://raw.githubusercontent.com/mvcss/mvcss/master'

# ----------------------------------------------------
#   Main
# ----------------------------------------------------

if (( "$#" == 0 )); then

  message yellow "Copying 'application.css' to the clipboard..."
  curl -s "$MVCSSURL"/_build/css/application.css | pbcopy
  message green "Copied!"
  exit

fi

if [ "$1" == 'min' ]; then

  message yellow "Copying 'application.min.css' to the clipboard..."
  curl -s "$MVCSSURL"/_build/css/application.min.css | pbcopy
  message green "Copied!"

fi
