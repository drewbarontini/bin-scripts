#!/usr/bin/env bash
# ****************************************************
#
#   Progress
#   -> Progress "bar" while command is running
#
# ----------------------------------------------------
#   Dependencies
# ----------------------------------------------------
#
#  - font
#
# ----------------------------------------------------
#   Usage
# ----------------------------------------------------
#
#  `progress command`
#
# ****************************************************

($*) &

pid=$!
delay=0.1

spin[0]='-'
spin[1]='\\'
spin[2]='|'
spin[3]='/'

while [ "$(ps a | awk '{print $1}' | grep $pid)" ]; do

  for i in "${spin[@]}"; do

    echo -ne "$( font blue )\b$i$( font default )"
    sleep $delay

  done

done

echo -ne '\r '
